{
	"name": "project",
	"env": {
		"home": "$HOME",
		"user": "$USER",
		"path": "$PATH",		
		"shell": "$SHELL",
		"unset": "${UNSET_ENV_VARIABLE:-}",
		"foo": "bar",
		"project-name": "${project_name}",
		"project-version": "${project_version}",
		"bad.name~format": "bar",
		"backtick": "`bar`",
		"rmdir": "rmdir target",
		"rmdir-backtick": "`rmdir target`",
		"and": "a && b",
		"or": "c || d",		
		"archive": {
			"name": "${project_name}-${project_version}.tgz",
			"dir": "${target}",
			"path": "${target}/${project_name}-${project_version}.tgz"
		}
	}
}