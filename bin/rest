options_minimum=2;
#options_fail_help=1;
options_expects_command=( get post put delete options );
options_map_command_method=1;

function options_parse {
	while [ "${1:-}" != "" ]; do
		case $1 in
		-h | --help )
			program_help;
			exit 0;
			;;
		* )
			program_help;
			exit 1;
		esac
		shift;
	done
}

#configure all the option defaults
options configure;

#now validate on remaining options
options validate "$@";

#validate the parameters
#options parse "$@";

array_pop "$@";

echo "$_result";
#echo "after pop length $#";

#always add the url as the last option
module_options+="$_result";

main "${module:-}" "${options_command_method:-}" "${module_options[@]:-}";

exit 0;