#	local method="$1";
#	echo "testing method $method"
#	declare -f -F "$method" > /dev/null;
#	return $?;
#}

#method_exists "method"; echo $?;
#method_exists "non-existent"; echo $?;

#list all functions, including source code
#typeset -f;

#list all function names
#typeset -F;

exit 0;