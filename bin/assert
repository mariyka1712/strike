#!/usr/bin/env bash

set -o errtrace;
set -o errexit;
set -o nounset;

######################################################################
#
#	BOILERPLATE
#
######################################################################
export PROGRAM_NAME=`basename $0`;
program_config_print_welcome="off";
program_config_print_prefix="off";
declare -gx exedir;
function boilerplate {
	local abspath=$(cd ${BASH_SOURCE[0]%/*} && echo $PWD/${0##*/});
	if [ -L "$abspath" ]; then
		abspath=`readlink $abspath`;
	fi
	exedir=`dirname "$abspath"`;
	local libdir="$exedir/../lib";
	source "$libdir/shared";
}
boilerplate;
######################################################################

function program.usage {
	usage "$PROGRAM_NAME test1 test2 ...";
}

if [ $# -eq 0 ]; then
	program.usage;
	exit 1;
fi

# set up the main delegate module as 'assert'
module="$PROGRAM_NAME";

function assert_main {
	local opts=( "$@" );
	echo "got assert options : ${opts[@]}";
}

main "${module:-}" "main" "$@";

exit 0;