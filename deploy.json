{
	"host": "cyberfunk@jet.freeformsystems.com",
	"directory": "~/www",	
	"notifications": {
		"mail": {
			"to": "muji <freeformsystems@gmail.com>"
		}
	},
	"env": {
		"archive": {
			"name": "${project_name}-${project_version}.tgz",
			"dir": "$target",
			"path": "${target}/${project_name}-${project_version}.tgz"
		}
	},
	"commands": {
		"local": {
			"description": "creates an npm package and moves it to target",
			"pre": [
				{
					"command": "npm",
					"options": [ "pack" ]
				},
				{
					"command": "mv",
					"options": [ "$env_archive_name", "$env_archive_dir" ]
				}
			]
		}
	},
	"profiles": {
		"default": {
			"description": "default deloyment using git(1)"
		},
		"test":{ "type": "git" },
		"stage":{},
		"man-tar": {
			"description": "create archive of man pages and deploy with tar(1)",
			"type": "tar",
			"url": "file://$target/manuals.tgz",
			"commands": {
				"local": {
					"pre": [
						{
							"command": "tar",
							"options": [ "-cf", "$target/manuals.tgz", "man", "README.md", "LICENSE" ]
						}
					]
				}
			}			
		},		
		"npm-tar": {
			"description": "npm(1)+tar(1)",
			"type": "tar",
			"url": "file://$env_archive_path"
		},
		"npm-scp-tar": {
			"description": "npm(1)+scp(1)+tar(1)",
			"type": "tar",
			"url": "~/$project_name-$project_version.tgz",
			"commands": {
				"local": {
					"pre": [
						{
							"command": "npm",
							"options": [ "pack" ]
						},
						{
							"command": "mv",
							"options": [ "$env_archive_name", "$env_archive_dir" ]
						},
						{
							"command": "scp",
							"options": [ "$env_archive_path", "${host}:~/" ]
						}
					]
				}
			}
		},
		"npm": {
			"description": "npm(1) latest public release",
			"type": "npm",
			"package": "${project_name}@0.1.6"
		},
		"development":{
			"type": "git",
			"local": true,
			"commands": {
				"local": {
					"pre": [
						{
							"command": "echo",
							"options": [ "hi" ]
						}
					]
				}
			}
		},
		"production":{ "type": "git" }
	}
}
