{
	"host": "cyberfunk@jet.freeformsystems.com",
	"directory": "~/www",
	"commands": {
		"local": {
			"pre": [
				{
					"command": "ls",
					"options": [ "$target" ]
				}
			],
			"post": [
				{
					"command": "console.info",
					"options": [ "deployment complete %s", "$deploy_name" ]
				}
			]
		}
	},
	"profiles": {
		"test":{ "type": "git" },
		"stage":{ "type": "git" },
		"npm": {
			"type": "tar",
			"commands": {
				"local": {
					"pre": [
						{
							"command": "npm",
							"options": [ "pack" ]
						},
						{
							"command": "mv",
							"options": [ "$project_name-$project_version.tgz", "target" ]
						},
						{
							"command": "scp",
							"options": [ "target/$project_name-$project_version.tgz", "${host}:~/" ]
						}
					]
				}
			}
		},
		"development":{
			"type": "git",
			"local": true,
			"commands": {
				"local": {
					"pre": [
						{
							"command": "echo",
							"options": [ "hi" ]
						}
					]
				}
			}
		},
		"production":{ "type": "git" }
	}
}
